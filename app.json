{
  "expo": {
    "name": "pgp-app",
    "slug": "pgp-app",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/pgp_logo.png",
    "scheme": "pgpapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/pgp_splashscreen.png",
      "backgroundColor": "#ffffff",
      "resizeMode": "cover"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/pgp_logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/pgp_favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/pgp_splashscreen.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ]
  }
}